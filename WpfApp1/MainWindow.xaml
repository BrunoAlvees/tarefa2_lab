<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adivinhe o Número" Height="200" Width="400">
    <Grid>
        <Label Content="Adivinhe um número entre 1 e 100:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox Name="guessTextBox" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Adivinhar" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0" Click="GuessButton_Click"/>
        <Label Name="resultLabel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10"/>
    </Grid>
</Window>